root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = off

[*.java]
ij_java_class_count_to_use_import_on_demand = 99999
ij_java_use_single_class_imports = true
ij_java_generate_final_locals = true
ij_java_generate_final_parameters = true
ij_java_indent_size = 4

[{*.kts,*.kt}]
ij_kotlin_name_count_to_use_star_import = 99999
ij_kotlin_indent_size = 2
ij_kotlin_continuation_indent_size = 2
ij_kotlin_packages_to_use_import_on_demand = 99999
ij_kotlin_name_count_to_use_star_import_for_members = 99999